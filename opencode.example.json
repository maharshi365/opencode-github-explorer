{
  "$schema": "https://opencode.ai/config.json",
  "plugin": ["opencode-github-explorer"],
  "githubExplorer": {
    "maxClonedRepos": 5,
    "cloneDirectory": "~/.cache/opencode/github-repos",
    "autoCleanupDays": 7,
    "cloneDepth": 1,
    "excludePatterns": ["node_modules", ".git", "dist", "build", ".next"]
  }
}
